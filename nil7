#include <iostream>
#include <vector>
#include <iomanip> // for setw
#include <limits>  // for input clearing
using namespace std;

class FlightGraph {
private:
    vector<vector<int>> adjMatrix;
    vector<string> cities;
    int numCities;

public:
    FlightGraph(int n) {
        numCities = n;
        adjMatrix.resize(n, vector<int>(n, 0));
        cities.resize(n);
    }

    void inputCities() {
        cout << "Enter names of " << numCities << " cities:\n";
        cin.ignore(); // clear newline from previous input
        for (int i = 0; i < numCities; i++) {
            cout << "City " << i + 1 << ": ";
            getline(cin, cities[i]);
        }
    }

    void addFlightPaths() {
        int time;
        cout << "\nEnter travel time in hours between cities (enter 0 if no direct flight):\n";
        for (int i = 0; i < numCities; i++) {
            for (int j = 0; j < numCities; j++) {
                if (i != j) {
                    cout << "Time from " << cities[i] << " to " << cities[j] << ": ";
                    while (!(cin >> time) || time < 0) { // ensure valid input
                        cout << "Invalid input. Please enter a non-negative integer: ";
                        cin.clear();
                        cin.ignore(numeric_limits<streamsize>::max(), '\n');
                    }
                    adjMatrix[i][j] = time;
                } else {
                    adjMatrix[i][j] = 0; // no self-loop time
                }
            }
        }
    }

    void displayAdjMatrix() {
        cout << "\nAdjacency Matrix Representation (Travel Time in Hours):\n\n";

        // Print column headers (city names)
        cout << setw(15) << " ";
        for (const auto& city : cities) {
            cout << setw(15) << city;
        }
        cout << "\n";

        // Print each row
        for (int i = 0; i < numCities; i++) {
            cout << setw(15) << cities[i]; // Row header (city name)
            for (int j = 0; j < numCities; j++) {
                cout << setw(15) << adjMatrix[i][j];
            }
            cout << endl;
        }
    }

    void displayAllFlights() {
        cout << "\nAll Available Flight Times:\n";
        for (int i = 0; i < numCities; i++) {
            for (int j = 0; j < numCities; j++) {
                if (i != j) {
                    if (adjMatrix[i][j] > 0) {
                        cout << "Flight from " << cities[i] << " to " << cities[j]
                             << " takes " << adjMatrix[i][j] << " hour(s).\n";
                    } else {
                        cout << "No direct flight from " << cities[i] << " to " << cities[j] << ".\n";
                    }
                }
            }
        }
    }
};

int main() {
    int n;
    cout << "Enter number of cities: ";
    cin >> n;

    if (n <= 0) {
        cout << "Number of cities must be positive.\n";
        return 1;
    }

    FlightGraph graph(n);
    graph.inputCities();
    graph.addFlightPaths();
    graph.displayAdjMatrix();
    graph.displayAllFlights();

    return 0;
}
